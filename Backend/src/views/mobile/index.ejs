<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Document</title>
</head>
<style>
    body {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }
    
    .flex-container {
        background-color: black;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .boton {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    button {
        background-color: #007bff;
        color: white;
    }
    
    a {
        text-decoration: none;
        color: #007bff;
        margin-top: 10px; /* Agrega un margen superior para separar "a" de los demás elementos */
    }
    
    h1 {
        text-align: center;
        color: white;
    }
</style>
<body>    
    <div class="flex-container">
        <form id="form-login">
            <h1 style="margin-top: 0.5rem;" minlength="8">login</h1>
            <input id="email" style="margin-top: 0.5rem;" minlength="8" type="text" placeholder="Email" required>
            <input id="password" style="margin-top: 0.5rem;" minlength="8" type="password" placeholder="Contaseña" required>
        </form>
        <div class="boton">
            <button id="button-1" style="margin-top: 0.5rem;" minlength="8">Iniciar sesión</button>
            <a style="margin-top: 0.5rem;" minlength="8" href="http://localhost:3000/api/auth/forgot-password">¿olvidaste tu contraseña?</a>
            <a style="margin-top: 0.5rem;" minlength="8" href="http://localhost:3000/api/mobile/register">Registrarse</a>
        </div>
    </div>
</body>
<script>

    const button = document.getElementById("button-1");

    button.addEventListener("click", async (e) => {
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;

        if (email.trim() === "" || password.trim() === "") {
            alert("Por favor, completa todos los campos");
        } else {
            const data = {
                email,
                password
            };

            const res = await fetch("http://localhost:3000/api/auth/login", {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await res.json();

            if (res.ok) {
                localStorage.setItem("token", result.token);
                window.location.href = "http://localhost:3000/api/mobile/reservation";
            } else {
                window.location.href = "http://localhost:3000/api/mobile/login";
            }
        }
    });

</script>

</html>