<%- include("../templates/header", {titulo: "Smart Parking - Salida" }) %>

    <div class="maindiv">
        <form class="mainform">
            <div style="color: #0D5492;">
                <h1 class="text-center">Marcar Salida</h1>
            </div>
            <div class="text-center">
                <img src="http://localhost:3000/images/logo-transparency-bg.png"" class=" img-fluid" alt="">
            </div>
            <div>
                <div class="text-center" id="messageContainer" style="display: none;"></div>
                <input style="margin-top: 0.5rem;" class="forminput" id="patente" type="text" placeholder="patente" required>
                <button class="btn to-reg-button" id="button">Enviar</button>
            </div>
        </form>
    </div>
    </body>

    <script src="/socket.io/socket.io.js"></script>

    <script>

        const socket = io("http://localhost:3000")
        const button = document.getElementById("button")
        const messageContainer = document.getElementById("messageContainer")

        button.addEventListener("click", (event) => {

            event.preventDefault()
            const patente = document.getElementById("patente")

            const data = {
                patente: patente.value
            }

            socket.emit("guest-exit-request", data)
        })

        socket.on("guest-exit-ok", ({ message, place }) => {
            console.log(message)
            messageContainer.style.display = "block"
            messageContainer.textContent = message
            messageContainer.style.color = 'green'
        })

        socket.on("guest-exit-denied", ({message}) => {
            console.log(message)
            messageContainer.style.display = "block"
            messageContainer.textContent = message
            messageContainer.style.color = 'red'
        })

    </script>

</html>